<span class="work-id" data-work-id="<%= presenter.id %>"></span>
  <script>
    Tufts.qrStatus()
  </script>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Work Actions</h3>
    </div>
    <div class="list-group-item">
      <ul class="show-action-buttons">
        <% if Hyrax.config.analytics? %>
        <li>
          <%= link_to "Analytics", presenter.stats_path, id: 'stats', class: 'btn btn-default' %>
        </li>
        <% end %>
        <% if presenter.editor? %>
        <li>
          <%= link_to "Edit", edit_polymorphic_path([main_app, presenter]), class: 'btn btn-default' %>
        </li>
        <li>
          <%= link_to "Delete", [main_app, presenter], class: 'btn btn-danger', data: { confirm: "Delete this #{presenter.human_readable_type}?" }, method: :delete %>
        </li>
        <% if presenter.member_presenters.size > 1 %>
        <li>
          <%= link_to t("hyrax.file_manager.link_text"), polymorphic_path([main_app, :file_manager, presenter]), class: 'btn btn-default' %>
        </li>
    <% end %>
        <li>
          <%= link_to 'Mark as Reviewed', "/qr_statuses/#{presenter.id}/set_status", class: 'btn btn-default mark-as-reviewed' , method: :post, remote: true %>
        </li>
        
        <li>
          <!-- If the work is unpublished, offer a publish button. If it is published, offer an unpublish button -->
          <% if presenter.solr_document["workflow_state_name_ssim"] %>
            <% workflow_state = presenter.solr_document["workflow_state_name_ssim"].first %>
            <% if workflow_state == "unpublished" %>
              <%= link_to 'Publish', "/publication_statuses/#{presenter.id}/publish", class: 'btn btn-default publish' , method: :post, remote: true %>
            <% elsif workflow_state == "published" %>
              <%= link_to 'Unpublish', "/publication_statuses/#{presenter.id}/unpublish", class: 'btn btn-default publish' , method: :post, remote: true %>
            <% else %>
              <b>Could not determine workflow state</b>
            <% end %>
          <% end %>
        </li>
  <% end %>

  <!-- if presenter.work_templatable? && presenter.editor? -->
  <% if presenter.work_templatable? %>
  <li>
    <%= link_to "Apply Template", main_app.new_template_update_path(ids: [presenter.id]), class: 'btn btn-default' %>
  </li>

  <% end %>

  <% if presenter.work_featurable? %>
  <li>
      <%= link_to "Feature", hyrax.featured_work_path(presenter, format: :json),
          data: { behavior: 'feature' },
          class: presenter.display_unfeature_link? ? 'btn btn-default collapse' : 'btn btn-default' %>
      </li>
      <li>

      <%= link_to "Unfeature", hyrax.featured_work_path(presenter, format: :json),
          data: { behavior: 'unfeature' },
          class: presenter.display_feature_link? ? 'btn btn-default collapse' : 'btn btn-default' %>
      </li>
  <% end %>

   <li>
          <%= link_to 'View Metadata', "#{request.path}.ttl", class: 'btn btn-default show-metadata' %>
        </li>
      </ul>
    </div>
<!-- COinS hook for Zotero -->
  <span class="Z3988" title="<%= export_as_openurl_ctx_kev(presenter) %>"></span>
</div>
